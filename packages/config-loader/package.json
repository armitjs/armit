{
  "name": "@armit/config-loader",
  "version": "0.0.43",
  "description": "A config loader searches for and loads configuration for your program, support `type:module`, `esm`, `cjs`",
  "keywords": [
    "esm",
    "config loader",
    "cjs",
    "type:module"
  ],
  "homepage": "https://github.com/armitjs/armit",
  "repository": {
    "type": "git",
    "url": "https://github.com/armitjs/armit",
    "directory": "packages/config-loader"
  },
  "license": "MIT",
  "author": {
    "name": "Yingchun Tian",
    "url": "https://github.com/tianyingchun"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "index.js",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p ./tsconfig.build.json",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "dev": "tsup --watch",
    "clean": "rimraf --no-glob ./dist ./coverage ./tsconfig.tsbuildinfo",
    "lint": "eslint . --ext .ts,.mts,.tsx,.js,.jsx,.cjs,.mjs --cache --cache-location ../../.cache/eslint/config-loader.eslintcache",
    "test": "run-s test-unit",
    "test-unit": "vitest run --passWithNoTests",
    "test-coverage": "vitest run --coverage",
    "test-unit-watch": "vitest watch --ui",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@armit/file-utility": "workspace:^",
    "@armit/package": "workspace:^",
    "cosmiconfig": "^8.1.3",
    "type-fest": "^3.11.1"
  },
  "devDependencies": {
    "@armit/eslint-config-bases": "workspace:^",
    "@babel/core": "^7.22.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.22.3",
    "@babel/preset-env": "^7.22.4",
    "@babel/preset-typescript": "^7.21.5",
    "@babel/runtime": "^7.22.3",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@types/babel__core": "^7.20.1",
    "@types/node": "20.2.5",
    "@vitest/coverage-istanbul": "0.31.4",
    "@vitest/ui": "0.31.4",
    "eslint": "8.41.0",
    "fast-async": "^7.0.6",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.8",
    "rimraf": "5.0.1",
    "rollup": "^3.23.0",
    "ts-node": "10.9.1",
    "tsup": "6.7.0",
    "typescript": "5.1.3",
    "vite": "4.3.9",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "0.31.4"
  },
  "peerDependencies": {
    "@babel/plugin-proposal-class-properties": ">=7.18.6",
    "@babel/plugin-proposal-decorators": ">=7.21.0",
    "@babel/preset-env": ">=7.21.5",
    "@babel/preset-typescript": ">=7.21.5",
    "@rollup/plugin-babel": ">=6.0.3",
    "@rollup/plugin-commonjs": ">=25.0.0",
    "@rollup/plugin-json": ">=6.0.0",
    "@rollup/plugin-node-resolve": ">=15.0.2",
    "ts-node": ">=10.9.1"
  },
  "peerDependenciesMeta": {
    "@babel/plugin-proposal-class-properties": {
      "optional": true
    },
    "@babel/plugin-proposal-decorators": {
      "optional": true
    },
    "@babel/preset-env": {
      "optional": true
    },
    "@babel/preset-typescript": {
      "optional": true
    },
    "@rollup/plugin-babel": {
      "optional": true
    },
    "@rollup/plugin-commonjs": {
      "optional": true
    },
    "@rollup/plugin-json": {
      "optional": true
    },
    "@rollup/plugin-node-resolve": {
      "optional": true
    },
    "ts-node": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}
