{
  "name": "@armit/common",
  "version": "0.0.10",
  "homepage": "https://github.com/armitjs/armit",
  "repository": {
    "type": "git",
    "url": "https://github.com/armitjs/armit",
    "directory": "packages/common"
  },
  "license": "MIT",
  "author": {
    "name": "Yingchun Tian",
    "url": "https://github.com/tianyingchun"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "index.js",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsup",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "dev": "tsup --watch",
    "clean": "rimraf --no-glob ./dist ./coverage ./tsconfig.tsbuildinfo",
    "lint": "eslint . --ext .ts,.mts,.tsx,.js,.jsx,.cjs,.mjs --cache --cache-location ../../.cache/eslint/common.eslintcache",
    "test": "run-s test-unit",
    "test-unit": "vitest run --passWithNoTests",
    "test-unit-watch": "vitest watch --ui",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "adm-zip": "0.5.9",
    "boxen": "7.0.0",
    "cfonts": "3.1.1",
    "execa": "6.1.0",
    "globby": "13.1.2",
    "has-yarn": "3.0.0",
    "is-installed-globally": "0.4.0",
    "is-npm": "6.0.0",
    "is-yarn-global": "0.4.0",
    "mem": "9.0.2",
    "micromatch": "4.0.5",
    "picocolors": "1.0.0",
    "pkg-dir": "7.0.0",
    "pkg-up": "4.0.0",
    "resolve": "1.22.1",
    "semver": "7.3.8",
    "terminal-link": "3.0.0",
    "type-fest": "3.1.0",
    "yargs": "17.6.0"
  },
  "devDependencies": {
    "@armit/eslint-config-bases": "workspace:^",
    "@bleed-believer/path-alias": "0.10.17",
    "@types/adm-zip": "0.5.0",
    "@types/micromatch": "4.0.2",
    "@types/node": "18.11.4",
    "@types/resolve": "1.20.2",
    "@vitest/coverage-istanbul": "0.24.3",
    "@vitest/ui": "0.24.3",
    "eslint": "8.26.0",
    "image-size": "1.0.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "tsup": "6.3.0",
    "typescript": "4.8.4",
    "vite": "3.1.8",
    "vite-tsconfig-paths": "3.5.2",
    "vitest": "0.24.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}
