{
  "name": "@armit/common",
  "version": "0.0.1",
  "private": true,
  "homepage": "https://github.com/armitjs/armit",
  "repository": {
    "type": "git",
    "url": "https://github.com/armitjs/armit",
    "directory": "packages/common"
  },
  "license": "MIT",
  "author": {
    "name": "Yingchun Tian",
    "url": "https://github.com/tianyingchun"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./index.js",
      "require": "./index.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "index.js",
    "index.cjs",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf --no-glob ./dist ./coverage ./tsconfig.tsbuildinfo",
    "lint": "eslint . --ext .ts,.mts,.tsx,.js,.jsx,.cjs,.mjs --cache --cache-location ../../.cache/eslint/common.eslintcache",
    "test": "run-s test-unit",
    "test-unit": "node --experimental-vm-modules ../../node_modules/jest/bin/jest --config jest.config.mjs",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "globby": "13.1.2",
    "picocolors": "1.0.0"
  },
  "devDependencies": {
    "@armit/eslint-config-bases": "workspace:^",
    "@jest/types": "29.1.2",
    "@types/jest": "29.1.2",
    "@types/node": "18.8.3",
    "eslint": "8.25.0",
    "jest": "29.1.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "ts-jest": "29.0.3",
    "tsup": "6.2.3",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
