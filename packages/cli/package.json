{
  "name": "@armit/cli",
  "version": "0.2.0",
  "homepage": "https://github.com/armitjs/armit",
  "repository": {
    "type": "git",
    "url": "https://github.com/armitjs/armit",
    "directory": "packages/cli"
  },
  "license": "MIT",
  "author": {
    "name": "Yingchun Tian",
    "url": "https://github.com/tianyingchun"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "arm": "./bin/armit.mjs"
  },
  "files": [
    "bin/",
    "dist/",
    "index.js",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsup",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "dev": "tsup --watch",
    "clean": "rimraf --no-glob ./dist ./_release ./coverage ./tsconfig.tsbuildinfo",
    "lint": "eslint . --cache --cache-location ../../.cache/eslint/cli.eslintcache",
    "fix-all-files": "eslint . --fix",
    "test": "run-s test-unit",
    "test-unit": "vitest run --passWithNoTests",
    "test-coverage": "vitest run --coverage",
    "test-unit-watch": "vitest watch --ui",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@armit/commander": "workspace:^",
    "@armit/file-utility": "workspace:^",
    "@armit/generate-template-files": "workspace:^",
    "@armit/package": "workspace:^",
    "@armit/terminal": "workspace:^",
    "@hyperse/exec-program": "^1.0.6",
    "os-name": "^6.0.0"
  },
  "devDependencies": {
    "@hyperse/eslint-config-hyperse": "^1.0.8",
    "@types/node": "20.14.2",
    "@vitest/coverage-istanbul": "1.6.0",
    "@vitest/ui": "1.6.0",
    "eslint": "^9.4.0",
    "npm-run-all": "4.1.5",
    "rimraf": "5.0.7",
    "tsup": "8.1.0",
    "typescript": "5.4.5",
    "vite": "5.2.13",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}
