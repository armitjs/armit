{
  "name": "@armit/package",
  "version": "0.0.31",
  "homepage": "https://github.com/armitjs/armit",
  "repository": {
    "type": "git",
    "url": "https://github.com/armitjs/armit",
    "directory": "packages/package"
  },
  "license": "MIT",
  "author": {
    "name": "Yingchun Tian",
    "url": "https://github.com/tianyingchun"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "index.js",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p ./tsconfig.build.json",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "dev": "tsup --watch",
    "clean": "rimraf --no-glob ./dist ./coverage ./tsconfig.tsbuildinfo",
    "lint": "eslint . --ext .ts,.mts,.tsx,.js,.jsx,.cjs,.mjs --cache --cache-location ../../.cache/eslint/package.eslintcache",
    "test": "run-s test-unit",
    "test-unit": "vitest run --passWithNoTests",
    "test-coverage": "vitest run --coverage",
    "test-unit-watch": "vitest watch --ui",
    "typecheck": "tsc --jsx react-jsx --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@armit/file-utility": "workspace:^",
    "@armit/logger-node": "workspace:^",
    "as-table": "1.0.55",
    "boxen": "7.1.0",
    "dependency-tree": "10.0.9",
    "execa": "7.1.1",
    "has-yarn": "3.0.0",
    "install-local": "3.0.1",
    "is-installed-globally": "0.4.0",
    "is-npm": "6.0.0",
    "is-yarn-global": "0.4.1",
    "npm-check-updates": "16.10.12",
    "npm-list-linked": "0.1.0",
    "ora": "6.3.1",
    "package-json": "8.1.0",
    "picocolors": "1.0.0",
    "pkg-dir": "7.0.0",
    "pkg-up": "4.0.0",
    "semver": "7.5.1",
    "type-fest": "^3.11.0"
  },
  "devDependencies": {
    "@armit/eslint-config-bases": "workspace:^",
    "@types/node": "20.2.5",
    "@vitest/coverage-istanbul": "0.31.1",
    "@vitest/ui": "0.31.1",
    "eslint": "8.41.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.8",
    "rimraf": "5.0.1",
    "semver-regex": "4.0.5",
    "ts-node": "10.9.1",
    "typescript": "5.0.4",
    "vite": "4.3.9",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "0.31.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}
