{
  "name": "@armit/package",
  "version": "0.1.5",
  "homepage": "https://github.com/armitjs/armit",
  "repository": {
    "type": "git",
    "url": "https://github.com/armitjs/armit",
    "directory": "packages/package"
  },
  "license": "MIT",
  "author": {
    "name": "Yingchun Tian",
    "url": "https://github.com/tianyingchun"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "index.js",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p ./tsconfig.build.json",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "dev": "tsup --watch",
    "clean": "rimraf --no-glob ./dist ./_release ./coverage ./tsconfig.tsbuildinfo",
    "lint": "eslint . --ext .ts,.mts,.tsx,.js,.jsx,.cjs,.mjs --cache --cache-location ../../.cache/eslint/package.eslintcache",
    "test": "run-s test-unit",
    "test-unit": "vitest run --passWithNoTests",
    "test-coverage": "vitest run --coverage",
    "test-unit-watch": "vitest watch --ui",
    "typecheck": "tsc --jsx react-jsx --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@armit/file-utility": "workspace:^",
    "@armit/logger-node": "workspace:^",
    "as-table": "1.0.55",
    "boxen": "7.1.1",
    "cosmiconfig": "^9.0.0",
    "dependency-tree": "10.0.9",
    "execa": "8.0.1",
    "has-yarn": "3.0.0",
    "import-meta-resolve": "4.0.0",
    "install-local": "3.0.1",
    "is-installed-globally": "1.0.0",
    "is-npm": "6.0.0",
    "is-yarn-global": "0.4.1",
    "npm-check-updates": "17.0.0-5",
    "npm-list-linked": "0.1.0",
    "ora": "8.0.1",
    "package-json": "10.0.0",
    "picocolors": "1.0.0",
    "pkg-dir": "8.0.0",
    "pkg-up": "4.0.0",
    "semver": "7.6.0",
    "type-fest": "^4.14.0",
    "validate-npm-package-name": "5.0.0"
  },
  "devDependencies": {
    "@armit/eslint-config-bases": "workspace:^",
    "@types/node": "20.12.2",
    "@vitest/coverage-istanbul": "1.4.0",
    "@vitest/ui": "1.4.0",
    "eslint": "8.57.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "semver-regex": "4.0.5",
    "ts-node": "10.9.2",
    "typescript": "5.4.3",
    "vite": "5.2.7",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}
