{
  "name": "@armit/package",
  "version": "0.2.10",
  "homepage": "https://github.com/armitjs/armit",
  "repository": {
    "type": "git",
    "url": "https://github.com/armitjs/armit",
    "directory": "packages/package"
  },
  "license": "MIT",
  "author": {
    "name": "Yingchun Tian",
    "url": "https://github.com/tianyingchun"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "index.js",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p ./tsconfig.build.json",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "dev": "tsup --watch",
    "clean": "rimraf --no-glob ./dist ./_release ./coverage ./tsconfig.tsbuildinfo",
    "lint": "eslint . --cache --cache-location ../../.cache/eslint/package.eslintcache",
    "fix-all-files": "eslint . --fix",
    "test": "run-s test-unit",
    "test-unit": "vitest run --passWithNoTests",
    "test-coverage": "vitest run --coverage",
    "test-unit-watch": "vitest watch --ui",
    "typecheck": "tsc --jsx react-jsx --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@armit/file-utility": "workspace:^",
    "@armit/logger-node": "workspace:^",
    "@hyperse/install-local": "^1.0.2",
    "as-table": "^1.0.55",
    "boxen": "7.1.1",
    "cosmiconfig": "^9.0.0",
    "execa": "^9.5.1",
    "glob": "^11.0.0",
    "has-yarn": "^3.0.0",
    "import-meta-resolve": "^4.1.0",
    "is-installed-globally": "^1.0.0",
    "is-npm": "^6.0.0",
    "is-yarn-global": "^0.4.1",
    "npm-check-updates": "^17.1.11",
    "ora": "^8.1.1",
    "package-json": "^10.0.1",
    "package-up": "^5.0.0",
    "picocolors": "^1.1.1",
    "pkg-dir": "^8.0.0",
    "semver": "^7.6.3",
    "type-fest": "^4.27.0",
    "validate-npm-package-name": "^6.0.0"
  },
  "devDependencies": {
    "@hyperse/eslint-config-hyperse": "^1.2.7",
    "@types/node": "22.9.1",
    "@types/react": "^18.3.12",
    "eslint": "9.15.0",
    "npm-run-all": "4.1.5",
    "react": "^18.3.1",
    "rimraf": "6.0.1",
    "semver-regex": "4.0.5",
    "typescript": "5.6.3",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "2.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}
