{
  "name": "@armit/commander",
  "version": "0.2.9",
  "homepage": "https://github.com/armitjs/armit",
  "repository": {
    "type": "git",
    "url": "https://github.com/armitjs/armit",
    "directory": "packages/commander"
  },
  "license": "MIT",
  "author": {
    "name": "Yingchun Tian",
    "url": "https://github.com/tianyingchun"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "index.js",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p ./tsconfig.build.json",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "dev": "tsup --watch",
    "clean": "rimraf --no-glob ./dist ./_release ./coverage ./tsconfig.tsbuildinfo",
    "lint": "eslint . --cache --cache-location ../../.cache/eslint/commander.eslintcache",
    "fix-all-files": "eslint . --fix",
    "test": "run-s test-unit",
    "test-unit": "vitest run --passWithNoTests",
    "test-coverage": "vitest run --coverage",
    "test-unit-watch": "vitest watch --ui",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@armit/logger-node": "workspace:^",
    "@armit/package": "workspace:^",
    "@armit/terminal": "workspace:^",
    "@hyperse/exec-program": "^1.0.10",
    "@types/yargs": "^17.0.33",
    "globby": "^14.0.2",
    "memoize": "^10.0.0",
    "resolve": "^1.22.8",
    "type-fest": "^4.26.1",
    "typescript": "^5.6.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@hyperse/eslint-config-hyperse": "^1.1.3",
    "@types/node": "22.7.5",
    "@types/resolve": "1.20.6",
    "eslint": "^9.12.0",
    "npm-run-all": "4.1.5",
    "rimraf": "6.0.1",
    "semver": "7.6.3",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "2.1.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}
