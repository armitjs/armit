{
  "name": "@armit/file-utility",
  "version": "0.2.7",
  "homepage": "https://github.com/armitjs/armit",
  "repository": {
    "type": "git",
    "url": "https://github.com/armitjs/armit",
    "directory": "packages/file-utility"
  },
  "license": "MIT",
  "author": {
    "name": "Yingchun Tian",
    "url": "https://github.com/tianyingchun"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "index.js",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsup",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "dev": "tsup --watch",
    "clean": "rimraf --no-glob ./dist ./_release ./coverage ./tsconfig.tsbuildinfo",
    "lint": "eslint . --cache --cache-location ../../.cache/eslint/file-utility.eslintcache",
    "test": "run-s test-unit",
    "fix-all-files": "eslint . --fix",
    "test-unit": "vitest run --passWithNoTests",
    "test-coverage": "vitest run --coverage",
    "test-unit-watch": "vitest watch --ui",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "globby": "^14.0.2",
    "junk": "^4.0.1",
    "micromatch": "^4.0.8"
  },
  "devDependencies": {
    "@hyperse/eslint-config-hyperse": "^1.2.7",
    "@types/adm-zip": "0.5.6",
    "@types/micromatch": "4.0.9",
    "@types/node": "22.9.1",
    "eslint": "^9.15.0",
    "image-size": "1.1.1",
    "npm-run-all": "4.1.5",
    "rimraf": "6.0.1",
    "tsup": "8.3.5",
    "typescript": "5.6.3",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "2.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}
